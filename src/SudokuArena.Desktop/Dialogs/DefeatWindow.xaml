<Window x:Class="SudokuArena.Desktop.Dialogs.DefeatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Derrota"
        Width="460"
        Height="280"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource CanvasBackgroundBrush}">
    <Border Margin="18"
            Padding="18"
            CornerRadius="12"
            Background="{StaticResource SurfaceBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Derrota por Errores"
                       FontSize="25"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentBrush}" />

            <TextBlock Grid.Row="1"
                       Margin="0,12,0,12"
                       TextWrapping="Wrap"
                       FontSize="15"
                       Foreground="{StaticResource TextBrush}"
                       Text="Llegaste al limite de 3 errores. Esta partida cuenta como derrota. Puedes continuar si lo deseas y volver a intentarlo." />

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Terminar"
                        Margin="0,0,10,0"
                        Click="OnFinishClicked"
                        Background="#9EA3AD" />
                <Button Content="Continuar"
                        Click="OnContinueClicked"
                        Background="{StaticResource AccentBrush}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
