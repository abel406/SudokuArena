<Window x:Class="SudokuArena.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SudokuArena.Desktop.Controls"
        mc:Ignorable="d"
        Background="{DynamicResource CanvasBackgroundBrush}"
        Title="Sudoku Arena"
        Height="820"
        Width="1280"
        MinWidth="1040"
        MinHeight="700">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.35*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
                CornerRadius="14"
                Padding="18"
                Background="{DynamicResource SurfaceBrush}">
            <DockPanel>
                <TextBlock Text="SUDOKU ARENA"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextBrush}" />
                <TextBlock Text="{Binding StatusMessage}"
                           DockPanel.Dock="Right"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource AccentBrush}"
                           FontWeight="SemiBold" />
            </DockPanel>
        </Border>

        <Border Grid.Row="1"
                Margin="0,18,18,0"
                Padding="16"
                CornerRadius="14"
                Background="{DynamicResource SurfaceBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="8,0,8,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding ErrorSummary}"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextBrush}"
                               FontWeight="SemiBold" />

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Score, StringFormat=Puntaje: {0}}"
                                   HorizontalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="23"
                                   Foreground="{DynamicResource PrimaryBrush}" />
                        <TextBlock Text="{Binding DifficultyLabel}"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}" />
                    </StackPanel>

                    <TextBlock Grid.Column="2"
                               Text="{Binding ElapsedTimeText}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextBrush}"
                               FontWeight="SemiBold" />
                </Grid>

                <Grid Grid.Row="1">
                    <controls:SudokuBoardControl x:Name="BoardControl"
                                                 Focusable="True"
                                                 Cells="{Binding Cells}"
                                                 GivenCells="{Binding GivenCells}"
                                                 InvalidCells="{Binding InvalidCells}"
                                                 SelectedNumber="{Binding SelectedNumber}"
                                                 SelectedIndex="{Binding SelectedCell, Mode=TwoWay}" />

                    <Border Background="#C0000000"
                            CornerRadius="12"
                            Margin="16"
                            Padding="18"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding IsAutoCompleteOverlayVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Width="280">
                            <TextBlock Text="Autocompletado en curso"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White" />
                            <TextBlock Text="{Binding AutoCompleteProgressText, StringFormat=Progreso: {0}}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"
                                       Foreground="#E3ECFF" />
                            <TextBlock Text="{Binding AutoCompleteCurrentDigitText, StringFormat=Numero actual: {0}}"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"
                                       Foreground="#E3ECFF" />
                            <Button Content="Detener"
                                    Margin="0,12,0,0"
                                    Padding="10,6"
                                    Command="{Binding CancelAutoCompleteSessionCommand}" />
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Grid.Row="2" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Deshacer"
                            Command="{Binding UndoMoveCommand}"
                            Margin="4,0,4,0" />

                    <ToggleButton Grid.Column="1"
                                  Margin="4,0,4,0"
                                  Padding="12,8"
                                  IsChecked="{Binding IsDeleteMode, Mode=TwoWay}"
                                  Foreground="White"
                                  FontWeight="SemiBold"
                                  BorderThickness="0">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Content" Value="Borrar: OFF" />
                                <Setter Property="Background" Value="#9EA3AD" />
                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Content" Value="Borrar: ON" />
                                        <Setter Property="Background" Value="#C84A4A" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <ToggleButton Grid.Column="2"
                                  Margin="4,0,4,0"
                                  Padding="12,8"
                                  IsChecked="{Binding AutoCompleteEnabled, Mode=TwoWay}"
                                  Foreground="White"
                                  FontWeight="SemiBold"
                                  BorderThickness="0">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Content" Value="Autocompletado: OFF" />
                                <Setter Property="Background" Value="#9EA3AD" />
                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Content" Value="Autocompletado: ON" />
                                        <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>

                <ItemsControl Grid.Row="3"
                              Margin="0,12,0,0"
                              ItemsSource="{Binding NumberOptions}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" Columns="9" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.SelectNumberCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding Number}"
                                    Margin="4,0,4,0"
                                    Padding="8,7"
                                    Foreground="#3867B7"
                                    FontWeight="Bold"
                                    BorderThickness="1">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FAFAFD" />
                                        <Setter Property="BorderBrush" Value="#D5DAE5" />
                                        <Setter Property="Opacity" Value="1" />
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Background" Value="#E6EDFA" />
                                                <Setter Property="BorderBrush" Value="#8BAFEA" />
                                                <Setter Property="Foreground" Value="#1D54AF" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsDimmed}" Value="True">
                                                <Setter Property="Opacity" Value="0.4" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel>
                                    <TextBlock Text="{Binding Number}"
                                               HorizontalAlignment="Center"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" />
                                    <TextBlock Text="{Binding RemainingCount}"
                                               HorizontalAlignment="Center"
                                               Margin="0,2,0,0"
                                               FontSize="12"
                                               Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                               Opacity="0.95" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Grid.Column="1"
                Margin="0,18,0,0"
                Padding="18"
                CornerRadius="14"
                Background="{DynamicResource SurfaceBrush}">
            <StackPanel>
                <TextBlock Text="Tema"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" />
                <ComboBox Margin="0,6,0,12"
                          ItemsSource="{Binding ThemeModeOptions}"
                          SelectedItem="{Binding ThemeMode, Mode=TwoWay}" />

                <Border Margin="0,0,0,12"
                        Padding="8"
                        CornerRadius="8"
                        Background="#00000000"
                        BorderBrush="#7A838F"
                        BorderThickness="1">
                    <TextBlock Text="{Binding EffectiveThemeMode, StringFormat=Tema activo: {0}}"
                               Foreground="{DynamicResource TextBrush}" />
                </Border>

                <TextBlock Text="Jugador"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" />
                <TextBox Text="{Binding PlayerEmail}" Margin="0,6,0,12" />

                <TextBlock Text="Oponente"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" />
                <TextBox Text="{Binding OpponentEmail}" Margin="0,6,0,12" />

                <TextBlock Text="Dificultad"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}" />
                <ComboBox Margin="0,6,0,12"
                          ItemsSource="{Binding DifficultyTierOptions}"
                          SelectedItem="{Binding SelectedDifficultyTier, Mode=TwoWay}" />

                <Border Margin="0,0,0,12"
                        Padding="10"
                        CornerRadius="8"
                        Background="{DynamicResource CanvasBackgroundBrush}">
                    <StackPanel>
                        <TextBlock Text="Autocompletado automatico"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}" />
                        <TextBlock Text="{Binding AutoCompleteRemainingToSolve, StringFormat=Celdas pendientes: {0}}"
                                   Margin="0,4,0,8"
                                   Foreground="{DynamicResource TextBrush}" />
                        <TextBlock Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextBrush}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="Rango activacion: {0}..{1} | intervalo: {2} ms">
                                    <Binding Path="AutoCompleteTriggerMinRemaining" />
                                    <Binding Path="AutoCompleteTriggerMaxRemaining" />
                                    <Binding Path="AutoCompleteTickIntervalMilliseconds" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Button Content="Nuevo Puzzle" Command="{Binding NewPuzzleCommand}" />
                <Button Content="Modo LAN" Command="{Binding SwitchToLanCommand}" />
                <Button Content="Modo Cloud" Command="{Binding SwitchToCloudCommand}" />
                <Button Content="Host LAN" Command="{Binding HostLanCommand}" />
                <Button Content="Match Aleatorio" Command="{Binding QuickMatchCommand}" />

                <Border Margin="0,12,0,0"
                        Padding="12"
                        CornerRadius="10"
                        Background="{DynamicResource CanvasBackgroundBrush}">
                    <StackPanel>
                        <TextBlock Text="{Binding IsLanMode, StringFormat=Modo activo: {0}}"
                                   Foreground="{DynamicResource TextBrush}" />
                        <TextBlock Text="{Binding AutoCompleteStarts, StringFormat=AutoComp inicios: {0}}"
                                   Margin="0,6,0,0"
                                   Foreground="{DynamicResource TextBrush}" />
                        <TextBlock Text="{Binding AutoCompleteCancels, StringFormat=AutoComp cancelaciones: {0}}"
                                   Foreground="{DynamicResource TextBrush}" />
                        <TextBlock Text="{Binding AutoCompleteFilledCells, StringFormat=AutoComp celdas llenadas: {0}}"
                                   Foreground="{DynamicResource TextBrush}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="2"
                   Grid.ColumnSpan="2"
                   Margin="0,14,0,0"
                   Foreground="{DynamicResource TextBrush}"
                   Text="Controles: click izquierdo escribe, click derecho quita foco de celda, Ctrl+1..9 fija número sin escribir; Borrar funciona como modo herramienta; Autocompletado activa el autocompletado automático." />
    </Grid>
</Window>
